  "main": "dist/js/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/BenGorJS/Cookies"
  },
  "bugs": {
    "url": "https://github.com/BenGorJS/Cookies/issues"
  },
  "scripts": {
    "test": "ava",
    "prebuild": "rimraf dist",
    "build": "npm-run-all --parallel build:*",
    "build:main": "babel --copy-files --out-dir dist --ignore src/js/umd.js src",
    "build:umd": "webpack --output-filename bengor-cookies.umd.js",
    "build:umd.min": "webpack --output-filename bengor-cookies.umd.min.js -p"
  },
  "files": [
    "dist",
    "README.md",
    "snapshot.png"
  ],
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  },
  "ava": {
    "require": [
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "^6.14.0",
    "babel-core": "^6.10.4",
    "babel-loader": "^6.2.5",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-stage-2": "^6.13.0",
    "css-loader": "^0.25.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "jsdom": "^9.3.0",
    "node-sass": "^3.9.3",
    "npm-run-all": "^3.1.0",
    "postcss-cssnext": "^2.5.2",
    "postcss-loader": "^0.13.0",
    "precss": "^1.4.0",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2"
  }
}
